@model RestaurantWebsite.ViewModels.SpecialFormViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.Name;
}


<h1>@Model.Name</h1>

<img src="@Model.SpecialPictureFilePath" />

<p>@Model.Description</p>

<p>Ends: @Model.EndDate</p>

<h2>Foods In This Special</h2>
<ul>
    @{foreach (var food in Model.FoodsOnSpecial)
        {
            <li>@Html.ActionLink(food.Name, "Details", "Food", new { id = food.Id }, new { title = "Read more about " + food.Name, target = "_blank" })</li>
        }
    }
</ul>
