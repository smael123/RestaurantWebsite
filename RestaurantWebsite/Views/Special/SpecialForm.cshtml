@model RestaurantWebsite.ViewModels.SpecialFormViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Edit Special</h2>
@using (Html.BeginForm("Save", "Special"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Name)
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Description)
        @Html.TextBoxFor(c => c.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.StartDate)
        @Html.TextBoxFor(c => c.StartDate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.EndDate)
        @Html.TextBoxFor(c => c.EndDate, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(c => c.Id)
    @Html.ActionLink("Add Food", "PickFood", "Special", new { SpecialId = Model.Id }, new { @class="btn btn-secondary new-item" })
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Regular Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var food in Model.FoodsOnSpecial)
            {
                <tr>
                    <td>@food.Name</td>
                    <td>@food.BasePrice</td>
                </tr>
            }      
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Save</button>
}