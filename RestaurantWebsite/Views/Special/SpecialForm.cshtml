@model RestaurantWebsite.ViewModels.SpecialFormViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Edit Special</h2>
@using (Html.BeginForm("Save", "Special"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Name)
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Description)
        @Html.TextAreaFor(c => c.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.StartDate)
        @Html.TextBoxFor(c => c.StartDate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.EndDate)
        @Html.TextBoxFor(c => c.EndDate, new { @class = "form-control" })
    </div>

    if (Model.SpecialPictureFilePath == null) {
        Model.SpecialPictureFilePath = "/Images/SpecialImages/no-picture.png";
    }

    <img src="@Model.SpecialPictureFilePath" width="400" style="display: block;" />
    @Html.ActionLink("Edit Picture", "EditPicture", new { @id = Model.Id }, new { @class = "btn btn-secondary new-item" })


    @Html.HiddenFor(c => c.Id)

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Regular Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var food in Model.FoodsOnSpecial)
            {
                <tr>
                    <td>@food.Name</td>
                    <td>@food.BasePrice</td>
                </tr>
            }
        </tbody>
    </table>
    @Html.ActionLink("Add Food", "PickFood", "Special", new { SpecialId = Model.Id }, new { @class = "btn btn-secondary new-item" })
    <button type="submit" class="btn btn-primary">Save</button>
}