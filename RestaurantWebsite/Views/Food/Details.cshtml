@model RestaurantWebsite.ViewModels.FoodFormViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.Name;
}

<h1>@Model.Name</h1>

<div class="row">
    <div class="carousel slide col-md-6" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img width="300" src="@Model.FoodPictures.First().FilePath" />
            </div>
            @foreach (var foodPicture in Model.FoodPictures.Skip(1))
        {
            <div class="carousel-item">
                <img width="300" src="@foodPicture.FilePath" />
            </div>
    }
        </div>
    </div>
    <div class="col-md-6">
        <h2>Description</h2>
        <p>@Model.Description</p>
        @Model.BasePrice
    </div>
</div>
<div id="extras">
    <h2>Extras</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var extra in Model.Extras)
            {
            <tr>
                <td>@extra.Name</td>
                <td>@extra.AddedPrice</td>
            </tr>
            }
        </tbody>
    </table>
</div>

